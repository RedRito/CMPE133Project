<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmpe133.recycledex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleAppToDoList">
        <activity
            android:name="com.cmpe133.recycledex.HomePageActivity"
            android:exported="false" />
        <activity
            android:name="com.cmpe133.recycledex.SignInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.SimpleAppToDoList.Fullscreen" />
        <activity
            android:name="com.cmpe133.recycledex.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.cmpe133.recycledex.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>