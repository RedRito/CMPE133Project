<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".HomeFragment">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="317dp"
        android:layout_height="103dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_totalemissions"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/articleBoxHomePage"
        app:layout_constraintTop_toBottomOf="@+id/tv_recentsearch">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/plastics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/learnto1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/boxes"
                    android:clickable="true"
                    android:contentDescription="@string/plastics"
                    android:focusable="true"
                    android:src="@drawable/plastics" />

                <TextView
                    android:id="@+id/learnto1text"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="@string/plastics"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/mildishGreen"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/learnto2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/boxes"
                    android:clickable="true"
                    android:contentDescription="@string/metal"
                    android:focusable="true"
                    android:src="@drawable/metal" />

                <TextView
                    android:id="@+id/learnto2text"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="@string/metal"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/mildishGreen"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/learnto3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/boxes"
                    android:clickable="true"
                    android:contentDescription="@string/paper"
                    android:focusable="true"
                    android:src="@drawable/paper" />


                <TextView
                    android:id="@+id/learnto3text"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="@string/paper"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/mildishGreen"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/learnto4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/boxes"
                    android:clickable="true"
                    android:contentDescription="@string/glass"
                    android:focusable="true"
                    android:src="@drawable/wineglass" />

                <TextView
                    android:id="@+id/learnto4text"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="@string/glass"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/mildishGreen"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/learnto5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/boxes"
                    android:clickable="true"
                    android:contentDescription="@string/electronics"
                    android:focusable="true"
                    android:src="@drawable/electronics" />

                <TextView
                    android:id="@+id/learnto5text"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="@string/electronics"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/mildishGreen"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_suggestedArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="128dp"
        android:fontFamily="sans-serif"
        android:text="@string/suggestedarticle"
        android:textColor="@color/mildishGreen"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_recentsearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="@+id/cv_totalemissions" />

    <View
        android:id="@+id/articleBoxHomePage"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:background="@drawable/boxes"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_suggestedArticle"
        app:layout_constraintVertical_bias="0.013" />

    <TextView
        android:id="@+id/tv_recentsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/learntorecycle"
        android:textColor="@color/mildishGreen"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_totalemissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardBackgroundColor="@color/mildishGreen"
        app:layout_constraintBottom_toTopOf="@id/tvfaveloc"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_emiss2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/emissionssaved"
                android:textColor="@color/lightbrown"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_totalemiss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_totalemiss"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/lightbrown"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_emiss2"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvfaveloc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="@string/favoritelocations"
        android:textAlignment="center"
        android:textColor="@color/mildishGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recentsearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcFavLocHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvfaveloc"
        tools:listitem="@layout/centers_card" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvsuggesteditem"
        android:layout_width="323dp"
        android:layout_height="86dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/articleBoxHomePage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_suggestedArticle"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">


            <TextView
                android:id="@+id/tvArticleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="5 Reasons to Recycle — And How You Can Recycle Right "
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/mildishGreen"
                app:layout_constraintBottom_toTopOf="@+id/tvArticleAuthor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvArticleAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="San Jose Recycles"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/tvArticleDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvArticleTitle" />

            <TextView
                android:id="@+id/tvArticleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="The benefits of recycling"
                android:textSize="10sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvArticleAuthor" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
